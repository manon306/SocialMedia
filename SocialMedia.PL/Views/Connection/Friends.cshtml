@model IEnumerable<SocialMedia.BLL.ModelVM.Connect.FriendVM>
@{
    ViewData["Title"] = "My Connections";
}

<div class="container mt-4">
    <h2 class="text-light mb-4">My Friends</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">You don’t have any friends yet.</div>
    }
    else
    {
        <div class="row">
            @foreach (var friend in Model)
            {
                <div class="col-md-6">
                    <div class="card mb-3 shadow-sm bg-dark text-light">
                        <div class="card-body d-flex align-items-center">
                            <img src="@Url.Content("~/Files/" + friend.ProfileImagePath)"
                                 class="rounded-circle me-3 border border-secondary"
                                 width="60" height="60" alt="Profile Image" />

                            <div class="flex-grow-1">
                                <h5 class="mb-1">@friend.Name</h5>
                                <small class="text-muted">@friend.Email</small>
                            </div>

                            <div class="ms-auto">
                                <form asp-controller="Connection" asp-action="Unblock" method="post" class="d-inline">
                                    <input type="hidden" name="friendId" value="@friend.Id" />
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success btn-sm me-1">
                                        <i class="bi bi-unlock-fill"></i> Unblock
                                    </button>
                                </form>

                                <form asp-controller="Connection" asp-action="Block" method="post" class="d-inline">
                                    <input type="hidden" name="friendId" value="@friend.Id" />
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-slash-circle-fill"></i> Block
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
