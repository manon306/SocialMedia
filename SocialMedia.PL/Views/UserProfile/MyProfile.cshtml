@model SocialMedia.BLL.ModelVM.Profile.ViewProfileVM
@{
    ViewData["Title"] = "My Profile";
}

<style>
    .profile-wrapper {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 20px;
    }

    /* Sidebar Card */
    .profile-sidebar {
        background-color: var(--secondary-color);
        border-radius: 15px;
        padding: 25px;
        text-align: center;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

        .profile-sidebar img {
            border-radius: 50%;
            width: 140px;
            height: 140px;
            object-fit: cover;
            border: 4px solid var(--accent-color);
            margin-bottom: 15px;
        }

        .profile-sidebar h3 {
            margin-bottom: 5px;
            font-weight: bold;
        }

        .profile-sidebar p {
            color: var(--muted-text);
            font-size: 14px;
        }

    .action-buttons .btn {
        margin: 5px 0;
        width: 100%;
        border-radius: 30px;
        font-weight: 600;
    }

    /* Main Content */
    .profile-main {
        background-color: var(--secondary-color);
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

        .profile-main h4 {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding-bottom: 8px;
            margin-bottom: 15px;
        }

    .stat-box {
        background-color: var(--header-color);
        border-radius: 10px;
        padding: 15px;
        text-align: center;
        transition: background 0.3s ease;
    }

        .stat-box:hover {
            background-color: var(--accent-color);
        }

        .stat-box h5 {
            margin: 0;
            font-size: 20px;
            font-weight: bold;
        }

        .stat-box p {
            margin: 0;
            font-size: 13px;
            color: var(--muted-text);
        }

    .skills-list span {
        background: var(--header-color);
        padding: 6px 12px;
        border-radius: 20px;
        margin: 5px;
        display: inline-block;
        font-size: 13px;
    }
</style>

<div class="container mt-4 profile-wrapper">

    <!-- Sidebar -->
    <div class="profile-sidebar">
        <img src="~/Files/@Model.ProfileImagePath" alt="@Model.Name" />
        <h3>@Model.Name</h3>
        <p>@Model.Headline</p>
        <p><i class="fa-solid fa-location-dot"></i> @Model.Location</p>

        <div class="action-buttons mt-3">
            <a asp-controller="UserProfile" asp-action="Edit" class="btn btn-outline-light">
                <i class="fa fa-pen"></i> Edit
            </a>
            <a asp-controller="UserProfile" asp-action="Delete" class="btn btn-outline-danger">
                <i class="fa fa-trash"></i> Delete
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="profile-main">
        <!-- Bio -->
        <h4>About</h4>
        <p>@Model.Bio</p>
        <h4>Education</h4>
        <p>@Model.Education</p>
        <h4>Language</h4>
        <p>@Model.Language</p>



        <!-- Stats -->
        <h4>Statistics</h4>
        <div class="row text-center">
            <div class="col-md-4 mb-3">
                <div class="stat-box">
                    <h5>120</h5>
                    <p>Connections</p>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="stat-box">
                    <h5>87</h5>
                    <p>Followers</p>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="stat-box">
                    <h5>65</h5>
                    <p>Following</p>
                </div>
            </div>
        </div>

        <!-- Skills -->
        <h4>Skills</h4>
        <div class="skills-list">
            @if (!string.IsNullOrEmpty(Model.Skills))
            {
                foreach (var skill in Model.Skills.Split(','))
                {
                    <span>@skill.Trim()</span>
                }
            }
            else
            {
                <p class="text-muted">No skills added yet.</p>
            }
        </div>

        <!-- Recent Activity (Example Section) -->
        <h4 class="mt-4">Recent Activity</h4>
        <ul>
            <li>Shared a new post about C# development.</li>
            <li>Connected with John Doe.</li>
            <li>Updated profile headline.</li>
        </ul>
    </div>
</div>