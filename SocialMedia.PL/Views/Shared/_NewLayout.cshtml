<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialMedia</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        :root {
            --primary-color: #131a2a;
            --secondary-color: #202938;
            --header-color: #3a4354;
            --accent-color: #4e57d4;
            --text-color: #ffffff;
            --muted-text: #a8b3cf;
        }

        body {
            margin: 0;
            background-color: var(--primary-color);
            color: var(--text-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar */
        .navbar {
            background-color: var(--secondary-color);
        }

            .navbar .form-control {
                background-color: #1a2233;
                border: none;
                color: var(--text-color);
            }

                .navbar .form-control:focus {
                    box-shadow: 0 0 0 0.1rem var(--accent-color);
                }

        main {
            flex: 1;
            padding: 20px;
        }

        footer {
            background-color: var(--secondary-color);
            color: var(--muted-text);
            text-align: center;
            padding: 15px;
            margin-top: auto;
        }
    </style>
</head>
<body>

    <!-- ✅ Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">LinkQ OR LinkAI</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <form class="d-flex ms-auto">
                   @*  <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"> *@
                    @* <input class="form-control me-2" type="text" name="keyword" placeholder="Search by name or email" />
                    <button type="submit">Search</button> *@
                    @* <button class="btn btn-outline-light" type="submit"><i class="fa fa-search"></i></button> *@
                </form>
            </div>
        </div>
    </nav>

    <!-- ✅ Page Content -->
    <main role="main" class="container">
        @RenderBody()
    </main>

    <!-- ✅ Footer -->
    <footer>
        <p>&copy; @DateTime.Now.Year - SocialMedia. All Rights Reserved.</p>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
