<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialMedia.PL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SocialMedia.PL.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <!-- ✅ Navbar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SocialMedia.PL</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ✅ Page Layout -->
    <div class="container-fluid text-white" style="margin-top: 70px; background-color: var(--primary-color);">
        <div class="row">

            <!-- Aside -->
            <aside class="col-md-3 col-lg-2 border-end p-3">
                <div class="text-center mb-4 p-3 rounded-4">
                    <div class="rounded-circle overflow-hidden mx-auto mb-3 border border-3 border-primary" style="width: 80px; height: 80px;">
                        <img src="https://via.placeholder.com/80" class="w-100 h-100" alt="Profile">
                    </div>
                    <h6 class="fw-bold">أحمد محمد</h6>
                    <p class="text-muted small">مطور تطبيقات ويب</p>
                    <a class="nav-link" asp-action="Create" asp-controller="UserProfile">Create</a>
                    <a class="nav-link" asp-action="ViewProfile" asp-controller="UserProfile">ViewProfile</a>

                </div>
                <div class="mb-4 p-3 rounded-4">
                    <span class="small text-muted">من يشاهدونك: <b>12</b></span><br />
                    <span class="small text-muted">زوار الملف: <b>45</b></span>
                </div>
            </aside>

            <!-- Main Content -->
            <main class="col-md-9 col-lg-10 p-4">
                @RenderBody()

            </main>
        </div>
    </div>

    <!-- ✅ Footer -->
    <footer class="border-top py-4 ">
        <div class="container text-center">
            <p class="small text-muted mb-0">© 2023 ConnectPro. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
