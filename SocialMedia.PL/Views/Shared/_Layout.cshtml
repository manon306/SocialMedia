<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialMedia.PL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SocialMedia.PL.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="bg-light">

    <!-- ✅ Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg shadow-sm fixed-top text-white">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" href="#">ConnectPro</a>

                <!-- Search -->
                <form class="d-none d-md-flex flex-grow-1 mx-4">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="search" class="form-control bg-light border-0" placeholder="Search">
                    </div>
                </form>

                <!-- Menu -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item mx-2">
                            <a asp-controller="Post" asp-action="Index" class="nav-link text-white"><i class="bi bi-house-door fs-5"></i><br /><small>Home</small></a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white" href="#"><i class="bi bi-people fs-5"></i><br /><small>Network</small></a>
                        </li>
                        <li class="nav-item mx-2">

                            <a class="nav-link text-white" asp-area="" asp-controller="Jobs" asp-action="Index"><i class="bi bi-briefcase fs-5"></i><br /><small>Jobs</small></a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white" href="#"><i class="bi bi-chat-dots fs-5"></i><br /><small>Messaging</small></a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white" href="#"><i class="bi bi-bell fs-5"></i><br /><small>Notifications</small></a>
                        </li>
                        <li class="nav-item mx-2">
                            <a asp-area="" asp-controller="UserProfile" asp-action="MyProfile" class="nav-link text-white">
                                <br /><small>Me</small>
                            </a>

                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ✅ Page Layout -->
    <div class="container-fluid text-white" style="margin-top: 70px; background-color: var(--primary-color);">
        <div class="row">

            <!-- Aside -->
            @* <aside class="col-md-3 col-lg-2 border-end p-3">
                <div class="text-center mb-4 p-3 rounded-4">
                    <div class="rounded-circle overflow-hidden mx-auto mb-3 border border-3 border-primary" style="width: 80px; height: 80px;">
                        <img src="https://via.placeholder.com/80" class="w-100 h-100" alt="Profile">
                    </div>
                    <h6 class="fw-bold">
                        @User.Identity.Name
                    </h6>
                    <p class="text-muted small">مطور تطبيقات ويب</p>
                </div>
                <div class="mb-4 p-3 rounded-4">
                    <span class="small text-muted">من يشاهدونك: <b>12</b></span><br />
                    <span class="small text-muted">زوار الملف: <b>45</b></span>
                </div>
            </aside> *@

            <!-- Main Content -->
            <main class="col-md-9 col-lg-10 p-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- ✅ Footer -->
    <footer class="border-top py-4 ">
        <div class="container text-center">
            <p class="small text-muted mb-0">© 2023 ConnectPro. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
