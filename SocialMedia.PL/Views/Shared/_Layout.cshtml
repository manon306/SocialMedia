@inject IUserProfileService profileService
@inject UserManager<User> userManager

@{
    var user = await userManager.GetUserAsync(Context.User);
    string profileImagePath = "default-profile.jpg";

    if (user != null)
    {
        var profile = await profileService.GetProfile(user.Id.ToString());
        profileImagePath = profile?.ProfileImagePath ?? "default-profile.jpg";
    }

    ViewData["LayoutProfileImage"] = profileImagePath;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialMedia.PL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SocialMedia.PL.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<style>
    .modern-menu {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .modern-item {
        display: flex;
        align-items: center;
        padding: 15px;
        border-radius: 10px;
        color: white;
        text-decoration: none;
        transition: all 0.3s ease;
        position: relative;
    }

        .modern-item:hover {
            background-color: rgba(255, 255, 255, 0.1) !important;
            transform: translateX(5px);
        }

    .modern-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        margin-right: 15px;
        color: white;
        font-size: 18px;
    }

    .modern-content {
        flex-grow: 1;
    }

    .modern-title {
        font-weight: 600;
        font-size: 16px;
        margin-bottom: 3px;
    }

    .modern-subtitle {
        font-size: 12px;
    }

    .modern-badge {
        background-color: #ff6b6b;
        color: white;
        border-radius: 20px;
        padding: 3px 8px;
        font-size: 12px;
        font-weight: bold;
    }

    /* تنسيقات إضافية */
    .border-end {
        border-color: rgba(255, 255, 255, 0.1) !important;
    }

    .rounded-4 {
        border-radius: 12px !important;
    }
</style>
<body class="bg-light">

    <!-- ✅ Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg shadow-sm fixed-top text-white">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" href="#">ConnectPro</a>

                <!-- Search -->
                <form class="d-none d-md-flex flex-grow-1 mx-4">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="search" class="form-control bg-light border-0" placeholder="Search">
                    </div>
                </form>

                <!-- Menu -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item mx-2">
                            <a asp-controller="Post" asp-action="Index" class="nav-link text-white"><i class="bi bi-house-door fs-5"></i><br /><small>Home</small></a>
                        </li>
                        <li class="nav-item mx-2">

                            <a class="nav-link text-white" asp-area="" asp-controller="Jobs" asp-action="Index"><i class="bi bi-briefcase fs-5"></i><br /><small>Jobs</small></a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white" href="#"><i class="bi bi-chat-dots fs-5"></i><br /><small>Messaging</small></a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white" href="#"><i class="bi bi-bell fs-5"></i><br /><small>Notifications</small></a>
                        </li>
                        <li class="nav-item mx-2">
                            <a asp-area="" asp-controller="UserProfile" asp-action="MyProfile" class="nav-link text-white">
                                <img src="@Url.Content("~/Files/" + ViewData["LayoutProfileImage"])" class="rounded-circle me-2" width="40" height="40" alt="Profile">
                                <br /><small>Me</small>
                            </a>

                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white" asp-action="LogOff" asp-controller="Account"><i class="bi bi-box-arrow-right fs-5"></i><br /><small>LogOut</small> </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ✅ Page Layout -->
    <div class="container-fluid text-white" style="margin-top: 70px; background-color: var(--primary-color);">
        <div class="row">

            <!-- Aside -->
            <aside class="col-md-3 col-lg-2 border-end p-3" style="background-color: var(--secondary-color);">
                <div class="text-center mb-4 p-3 rounded-4">
                    <div class="rounded-circle overflow-hidden mx-auto mb-3 border border-3" style="width: 80px; height: 80px; border-color: var(--accent-color) !important;">
                        <img src="@Url.Content("~/Files/" + (ViewData["LayoutProfileImage"] ?? "default-profile.jpg"))" class="w-100 h-100" alt="Profile">
                    </div>
                    <h6 class="fw-bold text-white">
                        @User.Identity?.Name
                    </h6>
                    <p class="small" style="color: var(--muted-text);">مطور تطبيقات ويب</p>
                </div>
                <div class="modern-menu">
                    <!-- زر إنشاء البروفايل -->
                    <a href="/UserProfile/Create" class="modern-item create-profile-btn" style="background-color: var(--header-color);">
                        <div class="modern-icon" style="background: linear-gradient(135deg, var(--accent-color), #764ba2);">
                            <i class="bi bi-plus-lg"></i>
                        </div>
                        <div class="modern-content">
                            <div class="modern-title text-white">Create Profile</div>
                            <div class="modern-subtitle" style="color: var(--muted-text);">Set up your profile</div>
                        </div>
                    </a>

                    <a class="modern-item" asp-action="MyProfile" asp-controller="UserProfile" style="background-color: var(--header-color);">
                        <div class="modern-icon" style="background: linear-gradient(135deg, var(--accent-color), #764ba2);">
                            <i class="bi bi-person"></i>
                        </div>
                        <div class="modern-content">
                            <div class="modern-title text-white">My Profile</div>
                            <div class="modern-subtitle" style="color: var(--muted-text);">View your profile</div>
                        </div>
                    </a>

                    <a class="modern-item" asp-action="ViewProfile" asp-controller="UserProfile" style="background-color: var(--header-color);">
                        <div class="modern-icon" style="background: linear-gradient(135deg, var(--accent-color), #764ba2);">
                            <i class="bi bi-eye"></i>
                        </div>
                        <div class="modern-content">
                            <div class="modern-title text-white">View Profile</div>
                            <div class="modern-subtitle" style="color: var(--muted-text);">See others' profiles</div>
                        </div>
                    </a>

                    <a class="modern-item" asp-action="Friends" asp-controller="Connection" style="background-color: var(--header-color);">
                        <div class="modern-icon" style="background: linear-gradient(135deg, var(--accent-color), #764ba2);">
                            <i class="bi bi-people"></i>
                        </div>
                        <div class="modern-content">
                            <div class="modern-title text-white">Connections</div>
                            <div class="modern-subtitle" style="color: var(--muted-text);">12 friends</div>
                        </div>
                    </a>

                    <a class="modern-item" asp-action="Requests" asp-controller="Connection" style="background-color: var(--header-color);">
                        <div class="modern-icon" style="background: linear-gradient(135deg, var(--accent-color), #764ba2);">
                            <i class="bi bi-person-plus"></i>
                        </div>
                        <div class="modern-content">
                            <div class="modern-title text-white">Requests</div>
                            <div class="modern-subtitle" style="color: var(--muted-text);">5 pending</div>
                        </div>
                        <div class="modern-badge">5</div>
                    </a>
                </div>
            </aside>


            <!-- Main Content -->
            <main class="col-md-9 col-lg-10 p-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- ✅ Footer -->
    <footer class="border-top py-4 ">
        <div class="container text-center">
            <p class="small text-muted mb-0">© 2023 ConnectPro. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
